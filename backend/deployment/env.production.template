# MindFlow Production Environment Configuration
# Copy this file to .env.production and update with actual values
# IMPORTANT: Keep this file secure with chmod 600 permissions

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string for asyncpg driver
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://mindflow_app:CHANGE_PASSWORD@localhost/mindflow_prod

# Optional: Test database URL (not used in production)
# TEST_DATABASE_URL=postgresql+asyncpg://mindflow_app:CHANGE_PASSWORD@localhost/mindflow_test

# =============================================================================
# Security Configuration
# =============================================================================
# Secret key for JWT token signing (MUST be changed in production)
# Generate with: openssl rand -hex 32
SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32

# JWT algorithm (HS256 is recommended for symmetric signing)
JWT_ALGORITHM=HS256

# Access token expiration time in hours
ACCESS_TOKEN_EXPIRE_HOURS=24

# =============================================================================
# Environment Configuration
# =============================================================================
# Environment name: development, staging, production
ENVIRONMENT=production

# Debug mode: false in production (NEVER set to true in production)
DEBUG=false

# =============================================================================
# CORS Configuration
# =============================================================================
# Allowed origins for CORS (comma-separated list)
# Update with your actual frontend domains
ALLOWED_ORIGINS=https://mindflow.example.com,https://www.mindflow.example.com,https://chat.openai.com,https://chatgpt.com

# =============================================================================
# Monitoring & Error Tracking (Optional)
# =============================================================================
# Sentry DSN for error tracking and performance monitoring
# Sign up at https://sentry.io for free tier
# Leave empty to disable Sentry
SENTRY_DSN=

# Sentry environment name (optional)
# SENTRY_ENVIRONMENT=production

# Sentry traces sample rate (0.0 to 1.0, optional)
# SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_LEVEL=INFO

# JSON structured logging (true/false)
# LOG_JSON=true

# =============================================================================
# Rate Limiting (Optional)
# =============================================================================
# Rate limit per second per IP address
# RATE_LIMIT_PER_SECOND=10

# Rate limit burst size
# RATE_LIMIT_BURST=20

# =============================================================================
# Application Settings (Optional)
# =============================================================================
# Maximum request body size in bytes
# MAX_REQUEST_SIZE=5242880

# Request timeout in seconds
# REQUEST_TIMEOUT=60

# =============================================================================
# Database Pool Settings (Optional)
# =============================================================================
# Maximum number of database connections in pool
# DB_POOL_SIZE=5

# Maximum overflow connections
# DB_MAX_OVERFLOW=10

# Connection timeout in seconds
# DB_POOL_TIMEOUT=30

# =============================================================================
# NOTES:
# =============================================================================
# 1. NEVER commit this file with real credentials to version control
# 2. Use strong, randomly generated passwords and secret keys
# 3. Restrict file permissions: chmod 600 .env.production
# 4. Update ALLOWED_ORIGINS with your actual frontend domains
# 5. Enable Sentry for production error monitoring (free tier available)
# 6. Regularly rotate SECRET_KEY and database passwords
# 7. Review security settings before going live
# =============================================================================
